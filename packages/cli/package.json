{
  "name": "@romptai/cli",
  "version": "1.0.13",
  "bin": {
    "rompt": "./bin/index.js",
    "@romptai/cli": "./bin/index.js"
  },
  "scripts": {
    "prebuild": "shx rm -f tsconfig.package.tsbuildinfo",
    "build": "esbuild --platform=node --bundle ./src/index.ts --outdir=bin --minify --sourcemap",
    "clean": "shx rm -rf build pnpm-lock.yaml node_modules tsconfig.package.tsbuildinfo",
    "bump": "npm version patch --force"
  },
  "devDependencies": {
    "@romptai/common": "workspace:*",
    "@romptai/types": "workspace:*",
    "@types/node": "^18.15.5",
    "esbuild": "^0.17.15",
    "typescript": "^5.0.2"
  },
  "dependencies": {
    "arg": "^5.0.2",
    "cross-fetch": "^3.1.5"
  }
}
